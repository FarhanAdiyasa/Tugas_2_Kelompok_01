@model Tugas_2_Kelompok_01.Models.KuraKura

@{
    ViewData["Title"] = "Tambah Kura-Kura";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Kura-Kura</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="KuraKura" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="nama" class="control-label">Nama</label>
                                <input asp-for="nama" class="form-control" name="nama" required />
                                <span asp-validation-for="nama" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="namajenis" class="control-label">nama jenis</label>
                                <input asp-for="namajenis" class="form-control" name="namajenis" required />
                                <span asp-validation-for="namajenis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="harga" class="control-label">harga</label>
                                <input asp-for="harga" class="form-control" name="harga" required />
                                <span asp-validation-for="harga" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="status" class="control-label">status</label>
                                <input asp-for="status" class="form-control" name="status" required />
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
