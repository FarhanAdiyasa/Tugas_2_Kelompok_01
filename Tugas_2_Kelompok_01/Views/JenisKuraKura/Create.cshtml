@model Tugas_2_Kelompok_01.Models.JenisKuraKura

@{
    ViewData["Title"] = "Tambah Jenis Kura-kura";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Jenis Kura-kura</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="JenisKuraKura" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="namajenis" class="control-label">Nama Jenis</label>
                                <input asp-for="namajenis" class="form-control" name="namajenis" required />
                                <span asp-validation-for="namajenis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="stok" class="control-label">Stok</label>
                                <input asp-for="stok" class="form-control" name="stok" required />
                                <span asp-validation-for="stok" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
